{
  "name": "@yext/search-headless-react",
  "version": "2.4.0-alpha.6",
  "description": "The official React UI Bindings layer for Search Headless",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "type": "module",
  "license": "BSD-3-Clause",
  "types": "./dist/index.d.ts",
  "keywords": [
    "search",
    "react",
    "hooks",
    "react binding",
    "yext"
  ],
  "exports": {
    "import": "./dist/index.js",
    "import.types": "./dist/index.d.ts",
    "require": "./dist/index.cjs",
    "require.types": "./dist/index.d.cts"
  },
  "files": [
    "lib",
    "dist",
    "src",
    "THIRD-PARTY-NOTICES"
  ],
  "scripts": {
    "build": "rm -rf lib/** && rm -rf dist/** && npm run build:js && npm run generate-notices",
    "build:js": "tsc -p tsconfig.esm.json && tsc -p tsconfig.cjs.json && tsup src/index.ts --dts --sourcemap --format esm,cjs",
    "prepublishOnly": "npm run build",
    "dev": "tsc --watch -p tsconfig.esm.json",
    "lint": "eslint .",
    "test": "jest",
    "generate-notices": "generate-license-file --input package.json --output THIRD-PARTY-NOTICES --overwrite"
  },
  "dependencies": {
    "@yext/search-headless": "^2.4.0",
    "use-sync-external-store": "^1.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@css-modules-theme/core": "^2.3.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^28.1.1",
    "@types/react": "^18.0.9",
    "@types/use-sync-external-store": "^0.0.3",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@yext/eslint-config-slapshot": "^0.4.0",
    "@yext/eslint-plugin-export-star": "^1.0.0",
    "eslint": "^8.11.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-react-perf": "^3.3.1",
    "eslint-plugin-tsdoc": "^0.2.14",
    "generate-license-file": "^1.3.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "msw": "^0.36.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "ts-jest": "^28.0.4",
    "tsup": "^7.2.0",
    "typescript": "^4.5.4",
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "react": "^16.14 || ^17 || ^18"
  },
  "jest": {
    "bail": 0,
    "verbose": true,
    "collectCoverageFrom": [
      "src/*.ts(x)?"
    ],
    "resolver": "<rootDir>/tests/setup/resolver.ts",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/setup-env.ts"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@yext/search-headless)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/src"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/tests/**/*.(test).ts(x)?"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.esm.json"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yext/search-headless-react.git"
  },
  "optionalDependencies": {
    "esbuild-android-64": "^0.15.18"
  }
}
